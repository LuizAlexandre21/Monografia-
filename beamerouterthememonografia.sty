% Title page
\defbeamertemplate*{title page}{monografia}[1][]
                   {
    \vskip2cm                 
    \begin{beamercolorbox}[wd=12cm,leftskip=1cm,sep=8pt,#1]{title page header}
      \centering
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip 0.5cm
    \begin{beamercolorbox}[wd=10cm,leftskip1cm,sep=8pt,#1]{subtitle}
      \centering
      \usebeamerfont{author}\insertsubtitle\par%
    \end{beamercolorbox}
    \vskip2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author} 
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
    \vskip0.1cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
    \vskip0.1cm%
    \begin{beamercolorbox}[wd=17cm,leftskip=0cm,#1]{institute}
       \usebeamerfont{author}\insertinstitute%
    \end{beamercolorbox}
    \vskip0.1cm%
                   }
